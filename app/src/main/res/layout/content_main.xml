<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.view.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/conferenceEventImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainPageImageSize"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainPageImageSize"
                android:background="#8C000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/conferenceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/mainMargin"
                    android:fontFamily="@font/nunitosemibold"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSizeHeading" />

                <TextView
                    android:id="@+id/conferenceQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoregular"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/conferenceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/mainMargin"
                    android:fontFamily="@font/nunitoregular"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/timerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSizeHeading" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/colorBackground"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <!--ScheduleModel-->
            <androidx.cardview.widget.CardView
                android:id="@+id/scheduleCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorGreen"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/scheduleIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_event_note_black_24dp"
                        android:tint="@color/colorGreenDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scheduleIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Schedules"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Speakers-->
            <androidx.cardview.widget.CardView
                android:id="@+id/speakersCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorBlue"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/speakerIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_speaker"
                        android:tint="@color/colorBlueDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/speakerIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Speakers"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Sponsers-->
            <androidx.cardview.widget.CardView
                android:id="@+id/sponsersCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorOrange"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/supportersIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_sponsers"
                        android:tint="@color/colorOrangeDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/supportersIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Sponsers"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <!--Materials And Handsouts-->
            <androidx.cardview.widget.CardView
                android:id="@+id/materialsCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorPurple"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/materialIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_materials"
                        android:tint="@color/colorPurpleDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/materialIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Materials"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--About-->
            <androidx.cardview.widget.CardView
                android:id="@+id/aboutCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorRed"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/aboutIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_about_us"
                        android:tint="@color/colorRedDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/aboutIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="About"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Map-->
            <androidx.cardview.widget.CardView
                android:id="@+id/mapCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorSkyBlue"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/mapIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:tint="@color/colorSkyBlueDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mapIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Map"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <!--Abstract-->
            <androidx.cardview.widget.CardView
                android:id="@+id/abstractCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorOrange"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/abstractIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_abstract"
                        android:tint="@color/colorOrangeDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/abstractIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Abstract"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Search-->
            <androidx.cardview.widget.CardView
                android:id="@+id/searchCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorGreen"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/searchIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_search_black_24dp"
                        android:tint="@color/colorGreenDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/searchIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Search"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--notification-->
            <androidx.cardview.widget.CardView
                android:id="@+id/notificationCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/mainMargin"
                app:cardBackgroundColor="@color/colorBlue"
                app:cardCornerRadius="@dimen/mainMargin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainMargin">

                    <ImageView
                        android:id="@+id/notificationIV"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_os_notification_fallback_white_24dp"
                        android:tint="@color/colorBlueDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/notificationIV"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/nunitobold"
                        android:text="Notification"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSizeExtraSmall"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mainMargin"
            android:paddingRight="@dimen/mainMargin">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_organizer"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:padding="@dimen/mainMargin"
                android:text="Hosted By"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSizeHeading" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mainMargin"
            android:layout_marginTop="@dimen/mainMargin"
            android:layout_marginRight="@dimen/mainMargin"
            android:layout_marginBottom="@dimen/fab_margin"
            app:cardCornerRadius="@dimen/fab_margin"
            app:cardElevation="@dimen/mainMargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/mainMargin"
                android:paddingRight="@dimen/mainMargin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/smallMargin"
                    android:layout_marginTop="@dimen/smallMargin"
                    android:fontFamily="@font/nunitobold"
                    android:text="Kathmandu Institute of Applied Sciences"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSizeHeading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/mainMargin"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="Lalitpur Metropolitan City-18, Bagdol, Lalitpur (near overhead bridge)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSizeHeading" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/smallMargin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/mainMargin"
                        android:src="@drawable/ic_phone_black_24dp"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="01â€“6924204"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSizeHeading" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/smallMargin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/mainMargin"
                        android:src="@drawable/ic_email_black_24dp"
                        android:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitoregular"
                        android:text="@string/kiasEmail"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSizeHeading" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>