<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/a"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#DA5F6A"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/mochow_logo" />

        <TextView
            android:id="@+id/text_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:fontFamily="@font/nunitoregular"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="Abstract Submission"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/abstractSubmission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_dialog"
            android:layout_margin="@dimen/mainMargin"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/nunitobold"
            android:text=" Abstract Submission "
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSizeHeading" />

        <Button
            android:id="@+id/presentationGuidelines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abstractSubmission"
            android:layout_margin="@dimen/mainMargin"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/nunitobold"
            android:text="Presentation Guidelines"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSizeHeading" />
        <Button
            android:id="@+id/conferenceTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presentationGuidelines"
            android:layout_margin="@dimen/mainMargin"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/nunitobold"
            android:text="Conference Theme"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSizeHeading" />

    </RelativeLayout>


</LinearLayout>