<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jnanatech.mochwo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".News.view.WebPageActivity"></activity>
        <activity
            android:name=".scheduleDetail.ScheduleDetailActivity"
            android:label="Schedule Detail" />
        <activity
            android:name=".bookmark.view.BookmarkActivity"
            android:label="Bookmarks" />
        <activity
            android:name=".search.view.SearchActivity"
            android:label="Search">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".notification.view.NotificationActivity"
            android:label="Updates" />
        <activity
            android:name=".News.view.NewsActivity"
            android:label="News" />
        <activity
            android:name=".abstracts.view.AbstractActivity"
            android:label="Abstract" />
        <activity
            android:name=".schedule.view.ScheduleActivity"
            android:label="Schedule"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".speakerDetail.view.SpeakerDetailActivity"
            android:theme="@style/ChipTheme" />
        <activity
            android:name=".contactUs.ContactUsActivity"
            android:label="Contact Us"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".aboutUs.view.AboutUsActivity"
            android:label="About Us" />
        <activity
            android:name=".sponsers.view.SponserActivity"
            android:label="Collaborators" />
        <activity
            android:name=".speakers.view.SpeakersActivity"
            android:label="Speakers">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".main.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".utils.AlarmReceiver" />
    </application>

</manifest>