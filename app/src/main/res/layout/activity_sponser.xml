<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".sponsers.view.SponserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMargin"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/mainMargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mainMargin"
                    android:layout_marginTop="@dimen/smallMargin"
                    android:fontFamily="@font/nunitobold"
                    android:text="Host"
                    android:textSize="@dimen/textSizeHeading" />

                <ImageView
                    android:id="@+id/hostImageView"
                    android:layout_width="240dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/mainMargin"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMargin"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/mainMargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/mainMargin"
                    android:layout_marginTop="@dimen/smallMargin"
                    android:fontFamily="@font/nunitobold"
                    android:text="Co-Organizers"
                    android:textSize="@dimen/textSizeHeading" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/coOrganizerRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/mainMargin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/coOrganizerImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/mainMargin"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMargin"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/mainMargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/mainMargin"
                    android:layout_marginTop="@dimen/smallMargin"
                    android:fontFamily="@font/nunitobold"
                    android:text="Partners"
                    android:textSize="@dimen/textSizeHeading" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/partnersRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mainMargin"
                    android:paddingTop="@dimen/mainMargin"
                    android:paddingBottom="@dimen/mainMargin"
                    android:visibility="gone" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/partnersImageView1"
                            android:layout_width="180dp"
                            android:layout_height="90dp"
                            android:background="@color/colorWhite"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/mainMargin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/partnersImageView2"
                            android:layout_width="190dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/mainMargin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/partnersImageView3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/mainMargin"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/partnersImageView4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/mainMargin"
                            android:scaleType="fitXY" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMargin"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="@dimen/mainMargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/mainMargin"
                    android:layout_marginTop="@dimen/smallMargin"
                    android:fontFamily="@font/nunitobold"
                    android:text="Sponsors"
                    android:textSize="@dimen/textSizeHeading" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sponsersRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mainMargin"
                    android:paddingTop="@dimen/mainMargin"
                    android:paddingBottom="@dimen/mainMargin" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>